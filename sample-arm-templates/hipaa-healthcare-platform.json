{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "HIPAA-compliant healthcare data platform with FHIR, DICOM, and clinical analytics"
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.HealthcareApis/workspaces",
      "apiVersion": "2023-02-28",
      "name": "hcws-clinical-platform",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.HealthcareApis/workspaces/fhirservices",
      "apiVersion": "2023-02-28",
      "name": "hcws-clinical-platform/fhir-patient-records",
      "location": "[parameters('location')]",
      "kind": "fhir-R4",
      "properties": {},
      "dependsOn": [
        "[resourceId('Microsoft.HealthcareApis/workspaces', 'hcws-clinical-platform')]"
      ]
    },
    {
      "type": "Microsoft.HealthcareApis/workspaces/dicomservices",
      "apiVersion": "2023-02-28",
      "name": "hcws-clinical-platform/dicom-medical-imaging",
      "location": "[parameters('location')]",
      "properties": {},
      "dependsOn": [
        "[resourceId('Microsoft.HealthcareApis/workspaces', 'hcws-clinical-platform')]"
      ]
    },
    {
      "type": "Microsoft.HealthcareApis/workspaces/iotconnectors",
      "apiVersion": "2023-02-28",
      "name": "hcws-clinical-platform/iot-medical-devices",
      "location": "[parameters('location')]",
      "properties": {},
      "dependsOn": [
        "[resourceId('Microsoft.HealthcareApis/workspaces', 'hcws-clinical-platform')]"
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-04-15",
      "name": "cosmos-patient-timeline",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "stmedicalimaging",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_ZRS"
      },
      "properties": {
        "immutableStorageWithVersioning": {
          "enabled": true
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "app-patient-portal",
      "location": "[parameters('location')]",
      "kind": "app",
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "func-hl7-fhir-transform",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {}
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "logic-clinical-workflows",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.ApiManagement/service",
      "apiVersion": "2022-08-01",
      "name": "apim-healthcare-api",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Premium",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2022-10-01-preview",
      "name": "sb-clinical-events",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Premium",
        "tier": "Premium"
      }
    },
    {
      "type": "Microsoft.EventHub/namespaces",
      "apiVersion": "2022-10-01-preview",
      "name": "evh-device-telemetry",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard",
        "tier": "Standard"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "kv-healthcare-keys",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "premium"
        },
        "enablePurgeProtection": true,
        "enableSoftDelete": true
      }
    },
    {
      "type": "Microsoft.Network/applicationGateways",
      "apiVersion": "2023-05-01",
      "name": "appgw-healthcare-waf",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-05-01",
      "name": "vnet-healthcare-isolated",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": ["10.0.0.0/16"]
        }
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2023-05-01",
      "name": "pe-fhir-private",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Security/securityConnectors",
      "apiVersion": "2023-03-01",
      "name": "sc-defender-healthcare",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "appi-healthcare-audit",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "log-phi-audit-trail",
      "location": "[parameters('location')]",
      "properties": {
        "retentionInDays": 730
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "id-healthcare-managed",
      "location": "[parameters('location')]"
    }
  ]
}
