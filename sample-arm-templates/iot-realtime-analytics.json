{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Real-time streaming analytics pipeline for IoT sensor data"
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Devices/IotHubs",
      "apiVersion": "2023-06-30",
      "name": "iot-sensor-ingestion",
      "location": "[parameters('location')]",
      "sku": {
        "name": "S2",
        "capacity": 2
      }
    },
    {
      "type": "Microsoft.EventHub/namespaces",
      "apiVersion": "2022-10-01-preview",
      "name": "evh-telemetry-stream",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard",
        "tier": "Standard",
        "capacity": 4
      }
    },
    {
      "type": "Microsoft.StreamAnalytics/streamingjobs",
      "apiVersion": "2021-10-01-preview",
      "name": "asa-realtime-analytics",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "Standard"
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "sttelemetrylake",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "isHnsEnabled": true
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces",
      "apiVersion": "2021-06-01",
      "name": "syn-analytics-workspace",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.MachineLearningServices/workspaces",
      "apiVersion": "2023-06-01-preview",
      "name": "mlw-predictive-models",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.TimeSeriesInsights/environments",
      "apiVersion": "2020-05-15",
      "name": "tsi-sensor-explorer",
      "location": "[parameters('location')]",
      "kind": "Gen2",
      "sku": {
        "name": "L1",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.DigitalTwins/digitalTwinsInstances",
      "apiVersion": "2023-01-31",
      "name": "dt-facility-model",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "func-anomaly-detector",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {}
    },
    {
      "type": "Microsoft.SignalRService/signalR",
      "apiVersion": "2023-02-01",
      "name": "sigr-realtime-dashboard",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_S1",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-04-15",
      "name": "cosmos-device-state",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard"
      }
    },
    {
      "type": "Microsoft.Devices/provisioningServices",
      "apiVersion": "2022-12-12",
      "name": "dps-device-provisioning",
      "location": "[parameters('location')]",
      "sku": {
        "name": "S1",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "appi-iot-monitoring",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "log-iot-operations",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "kv-iot-credentials",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        }
      }
    }
  ]
}
