{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Multi-region disaster recovery architecture with active-passive failover"
  },
  "parameters": {
    "primaryLocation": {
      "type": "string",
      "defaultValue": "eastus2"
    },
    "secondaryLocation": {
      "type": "string",
      "defaultValue": "westus2"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/trafficManagerProfiles",
      "apiVersion": "2022-04-01",
      "name": "tm-global-routing",
      "location": "global",
      "properties": {
        "trafficRoutingMethod": "Priority"
      }
    },
    {
      "type": "Microsoft.Network/frontDoors",
      "apiVersion": "2021-06-01",
      "name": "fd-global-entry",
      "location": "global",
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "app-primary-eastus2",
      "location": "[parameters('primaryLocation')]",
      "kind": "app",
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "app-secondary-westus2",
      "location": "[parameters('secondaryLocation')]",
      "kind": "app",
      "properties": {}
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-05-01-preview",
      "name": "sql-primary-eastus2",
      "location": "[parameters('primaryLocation')]",
      "properties": {
        "administratorLogin": "sqladmin"
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-05-01-preview",
      "name": "sql-secondary-westus2",
      "location": "[parameters('secondaryLocation')]",
      "properties": {
        "administratorLogin": "sqladmin"
      }
    },
    {
      "type": "Microsoft.Sql/servers/failoverGroups",
      "apiVersion": "2022-05-01-preview",
      "name": "sql-primary-eastus2/fog-database-replication",
      "properties": {
        "readWriteEndpoint": {
          "failoverPolicy": "Automatic",
          "failoverWithDataLossGracePeriodMinutes": 60
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', 'sql-primary-eastus2')]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "stprimaryeastus2",
      "location": "[parameters('primaryLocation')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_RAGRS"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "stsecondarywestus2",
      "location": "[parameters('secondaryLocation')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      }
    },
    {
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2023-04-01",
      "name": "redis-primary-eastus2",
      "location": "[parameters('primaryLocation')]",
      "properties": {
        "sku": {
          "name": "Premium",
          "family": "P",
          "capacity": 1
        },
        "replicasPerMaster": 1
      }
    },
    {
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2023-04-01",
      "name": "redis-secondary-westus2",
      "location": "[parameters('secondaryLocation')]",
      "properties": {
        "sku": {
          "name": "Premium",
          "family": "P",
          "capacity": 1
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "kv-primary-eastus2",
      "location": "[parameters('primaryLocation')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "kv-secondary-westus2",
      "location": "[parameters('secondaryLocation')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        }
      }
    },
    {
      "type": "Microsoft.RecoveryServices/vaults",
      "apiVersion": "2023-01-01",
      "name": "rsv-backup-recovery",
      "location": "[parameters('primaryLocation')]",
      "sku": {
        "name": "RS0",
        "tier": "Standard"
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "appi-global-monitoring",
      "location": "[parameters('primaryLocation')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "log-central-operations",
      "location": "[parameters('primaryLocation')]",
      "properties": {}
    },
    {
      "type": "Microsoft.AlertsManagement/actionRules",
      "apiVersion": "2021-08-08",
      "name": "ar-failover-alerts",
      "location": "global",
      "properties": {}
    }
  ]
}
